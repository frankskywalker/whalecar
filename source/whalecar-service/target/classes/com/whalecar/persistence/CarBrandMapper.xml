<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.whalecar.persistence.CarBrandMapper">

  <cache />

  <select id="getAllBrand" resultType="CarBrand">   
    SELECT
        *
    FROM
        Car_Brand
    Where flag_useable  = 'yes'
    Order by order_index
  </select>
  
  <select id="getSubBrandByBrandId" parameterType="integer"  resultType="CarSubBrand">   
    SELECT
        *
    FROM
        Car_Sub_Brand
    Where Car_Brand = #{parameter} and flag_useable  = 'yes'
    Order by order_index
  </select>

</mapper>