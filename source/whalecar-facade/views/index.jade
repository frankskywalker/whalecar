      .span4
        .pagination.pagination-small.pagination-right(style='float:right;width:180px;margin: 10px 10px 0 0;')
           span(style='float:left;height: 25px;padding-top:6px;') #{carModelViews.currentPage} / #{carModelViews.pageCount}
