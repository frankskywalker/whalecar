.container(style='padding: 70px 0;')
    .row
        .span3
          ul.nav.nav-pills.nav-stacked(style='width: 210px;')
            li.text-center.active
              a(onclick='', href='#car_manager', data-toggle='pill') 销售销售库存管理
            li.text-center
              a(href='#car_order', data-toggle='pill') 预约订单管理
            li.text-center
              a(href='#shop_info', data-toggle='pill') 信息维护
            li.text-center
              a(href='#change_psw', data-toggle='pill') 修改密码
        .span9.tab-content
          #car_manager.tab-pane.active
            legend 销售库存管理
            input.btn.btn-primary.pull-right.span2(type='button', onclick='window.location.href=\'./edit_car.html\'', value='新建')
            table.table
              thead
                tr
                  th 型号
                  th 外观颜色
                  th 内饰颜色
                  th 备注
                  th 库存(现货/在途)
                  th 操作
              tbody
                tr
                  td 大众速腾2012款 1.6L 手动时尚型
                  td 黑色
                  td 红色
                  td 赠送 进口贴膜，油卡
                  td 2/0
                  td
                    a(href='#') 修改
                tr
                  td 大众速腾2012款 1.6L 手动时尚型
                  td 蓝色
                  td 黑色
                  td 赠送 进口贴膜，油卡
                  td 1/2
                  td
                    a(href='#') 修改
          #car_order.tab-pane
            legend 预约订单管理
            table.table
              thead
                tr
                  th 订单序号
                  th 订单名称
                  th 订单类型
                  th 订单日期
                  th 汽车金额
                  th 备注
              tbody
                tr
                  td 20130612A010201
                  td 预定大众速腾2012款 1.6L 手动时尚型 黄色
                  td 预约
                  td 2013.06.12
                  td 12.18万
                  td 无
                tr
                  td 20130612A087652
                  td 预定大众速腾2012款 1.6L 手动时尚型 黄色
                  td 预约
                  td 2013.06.12
                  td 12.18万
                  td 无
          #shop_info.tab-pane
            legend 信息维护
            form.form-horizontal
              .control-group
                label.control-label(for='shopname') 4s店名
                .controls
                  input#shopname(type='text', value='上海大众宁波兴宁达众汽车销售服务有限公司')
              .control-group
                label.control-label(for='tel') 电话
                .controls
                  input#tel(type='text', value='186312375008')
              .control-group
                label.control-label(for='mail') 邮箱
                .controls
                  input#mail(type='text', value='autocar@sina.com')
              .control-group
                label.control-label(for='addr') 地址
                .controls
                  textarea#addr(placeholder='地址', rows='3') 浙江宁波市江东兴宁路178号
              .control-group
                .controls
                  button.btn(type='submit') 修改
          #change_psw.tab-pane
            legend 修改密码
            .span5
              form.form-horizontal
                .control-group
                  label.control-label(for='oldpsw') 原密码
                  .controls
                    input#oldpsw(type='text', placeholder='原密码')
                .control-group
                  label.control-label(for='newpsw') 新密码
                  .controls
                    input#newpsw(type='text', placeholder='新密码')
                .control-group
                  label.control-label(for='confnewpsw') 确认新密码
                  .controls
                    input#confnewpsw(type='text', placeholder='确认新密码')
                .control-group
                  .controls
                    button.btn.btn-primary.pull-right.span2 提交
