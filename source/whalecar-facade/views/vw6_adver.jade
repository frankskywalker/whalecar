extends layout/mainFrame
block append css
    link(href='css/index.css', rel='stylesheet', media='screen')
    link(rel="stylesheet",href="css/carousel.css",media="all",type="text/css")
block append js
    script(type="text/javascript",src="js/jquery.carouFredSel-6.2.1-packed.js")
    script(type="text/javascript",src="js/slides.min.jquery.js")
block append content
    div(style="width:1200px;margin:0 auto;")
        div(style="width:1200px;height:1400px;background-image:url('img/golfInsider.png')")
            form(method="POST",action="./vw6AdverSave",style="padding-left:180px;padding-top:780px;")
                div(style="float:left;margin-left:100px;")
                    span(style="font-size:15px;padding-bottom:2px;") 姓名
                    input(type="text",name="name",style="width:140px;margin-left:10px;font-size:11px;line-height:10px;padding:0px 5px;")
                div(style="float:left;")
                    span(style="font-size:15px;padding-bottom:2px;margin-left:80px;") 手机号码
                    input#tel(type="text",name="tel",style="width:140px;margin-left:10px;font-size:11px;line-height:10px;padding:0px 5px;")
                div(style="float:left;margin-left:80px;")
                    input.btn.btn-mini(type="submit",value="提交",style="font-size:17px",onclick="return submit();")
    script.
        function submit(){
           if(!$('#tel').val().match(/^1\d{10}$/)){
              alert("您输入的手机号码格式有误，请重新输入！");
              return false;
           }
           alert("提交成功!");
           return true;
        }
