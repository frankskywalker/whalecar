extends layout/mainFrame

block append css
  link(rel="stylesheet",href="css/jquery.simplyscroll.css",media="all",type="text/css")
  link(href='css/car.css', rel='stylesheet', media='screen')

block append js
  script(type="text/javascript",src="js/jquery.simplyscroll.min.js")

block append content
  -var firstActivedTab = "";
  .container(style='padding: 10px 0px;')
    .row-fluid
        .span9
          .row-fluid
            img(src='img/slectcar.png', alt='slectcar',style="margin-bottom:10px")
            //汽车图片 
            h4(style='color: #4083A9;margin-bottom:10px')
              img(src='img/dasAuto.png', alt='dasAuto',style="padding:0 5px 3px 0")
              span(style="color:#666666") #{carModelLv1.brandCname}
              &nbsp;
              span #{carModelLv1.cname}
            .span8(style='margin: 0px;padding:0px;width:440px;background-color:#ffffff;border-radius:3px')
              #myCarousel.carousel.slide(style="margin-bottom:0px")
                //Carousel items
                #single(style="height: 270px; width: 440px")
                  div.carousel-inner
                     each item,index in carModelLv1Img
                       div.item
                          img(style="width: 440px; height: 270px;",src='img/carModelLv1Imgs/#{item.imgPath}')
                          if !!item.description
                            div.carousel-caption
                                p  #{item.description}
                  //Carousel nav
                  a.carousel-control.left(href='#myCarousel', data-slide='prev') ‹
                  a.carousel-control.right(href='#myCarousel', data-slide='next') ›
            .span4
              ul.nav.nav-tabs.nav-stacked.padding12px
                li
                  h5 市场价：13.18万 - 22.58万
                li
                  h5 网站价：12.18万 - 20.58万
                li
                  h5 排量：1.6L 1.4T 1.8T 2.0T
                li
                  h5 颜色：
                    p(style="color:red;display:inline")&nbsp;&nbsp;红
                    p(style="color:blue;display:inline")&nbsp;&nbsp;蓝
                    p(style="color:back;display:inline")&nbsp;&nbsp;黑
                li
                  h6(style="padding-left:10px;margin-top:10px;padding-right:10px")&nbsp;&nbsp;#{carModelLv1.description}
        .span3
          //
             相关其他车辆 
          legend
            h5
              p(style="color:#444444;display:inline")更多&nbsp;&nbsp;
              相关车型
          ul.thumbnails
            li.span6(style='')
              a.thumbnail
                img#img1(data-src='holder.js/210x140', alt='210x140', style='width: auto; height: auto;', src='img/car.jpg')
            li.span6(style='')
              a.thumbnail
                img#img1(data-src='holder.js/210x140', alt='210x140', style='width: auto; height: auto;', src='img/car.jpg')
          ul.thumbnails
            li.span6(style='')
              a.thumbnail
                img#img1(data-src='holder.js/210x140', alt='210x140', style='width: auto; height: auto;', src='img/car.jpg')
            li.span6(style='')
              a.thumbnail
                img#img1(data-src='holder.js/210x140', alt='210x140', style='width: auto; height: auto;', src='img/car.jpg')
          legend(style="margin-top:0px")
            h5
              p(style="color:#444444;display:inline")更多&nbsp;&nbsp;
              该4s店其他车型
          ul.thumbnails
            li.span6(style='')
              a.thumbnail
                img#img1(data-src='holder.js/210x140', alt='210x140', style='width: auto; height: auto;', src='img/car.jpg')
            li.span6(style='')
              a.thumbnail
                img#img1(data-src='holder.js/210x140', alt='210x140', style='width: auto; height: auto;', src='img/car.jpg')
          ul.thumbnails
            li.span6(style='')
              a.thumbnail
                img#img1(data-src='holder.js/210x140', alt='210x140', style='width: auto; height: auto;', src='img/car.jpg')
            li.span6(style='')
              a.thumbnail
                img#img1(data-src='holder.js/210x140', alt='210x140', style='width: auto; height: auto;', src='img/car.jpg')
    //库存列表
    legend 库存列表
    ul.nav.nav-pills#list
      each item,index in carModelLv2
        li
          a(id="tab#{item.id}",href="##{item.id}") #{item.fullName}
    div.tab-content
      each item,index in carModelLv2
        div.tab-pane(id=item.id)
          table.table
            thead
              tr
                th(style="width:300px")
                  p 经销商
                th(style="width:180px")
                  p 车型
                th(style="width:100px")
                  p 变速箱
                th(style="width:65px")
                  p 内饰
                th(style="width:65px")
                  p 外饰
                th(style="width:90px")
                  p 配置说明
                th(style="width:50px")
                  p 库存
                th(style="width:10px")
                  p
            tbody
              each shopStockView in item.shopStockList
                  if (shopStockView.carOnHandNum + shopStockView.carOnOrderNum) > 0
                    if(firstActivedTab == "")
                       - firstActivedTab = item.id
                    tr#shopStockTr(style='cursor: pointer;', onclick="focusTr(this,'tr#{shopStockView.id}')")
                      td(style="background: url(../img/cornerBand.png) top left no-repeat;font-size:14px") #{shopStockView.shopName}
                      td #{shopStockView.carModelLv3FullName}
                      td #{shopStockView.gearType}
                      td #{shopStockView.carInsideColorName}
                      td #{shopStockView.carOutsideColorName}
                      td 点击展开
                      td #{shopStockView.carOnHandNum + shopStockView.carOnOrderNum}
                      td
                    tr.shopStockTr(id="tr#{shopStockView.id}",style='display: none; background-color: #f8f8f8;')
                      td(colspan='4')
                        table
                          tbody
                            tr.detail
                              td(style="color:#555555;font-weight: bold") 详细配置说明
                              td 真皮座椅
                              td 导航
                              td 天窗
                              td 定速巡航
                              td 倒车雷达
                              td 电动座椅
                              td 座椅加热
                              td 倒车影像
                              td 多功能方向盘
                        table
                          tbody
                            tr.detail
                              td 鼎强汽车酷夏促销进行中，凡购车即送万元装潢大礼包，可办理贷款，0首付低利率！
                      td(colspan='1',style="vertical-align: middle;color:#666666;font-size:15px;text-decoration: line-through")  150w
                      td(colspan='1',style="vertical-align: middle;color:#ec6197;font-size:20px")  120w
                      td(colspan='1',style="vertical-align: middle;padding-left: 0px;padding-right: 0px;")
                        a.btn.btn-small.btn-primary(onclick="orderClick('#{shopStockView.id}')",href="#myModal",role="button",data-toggle="modal",style="padding-left: 8px;padding-right: 8px;") 预定
                      td(colspan='1',style="vertical-align: middle")
              else
                tr
                  td(colspan='8') 暂无库存
    #myModal.modal.hide.fade(style='left: 42%; width: 780px;')
      .modal-body(style='border-radius: 4px 4px 4px 4px;')
        ul.thumbnails(style='margin-left: 0px; margin-bottom: 0px;')
          li.span3(onclick="$('#userOrderForm').submit();",style='background-color: #ec6197; width: 250px; margin-left: 0px; margin-bottom: 0px;cursor:pointer;')
            div(style='height: 200px; margin: 20px;')
              br
              h3(style='color: #ffffff;') 网站指导价购买
              br
              p(style='color: #ffffff;') 进行订金的支付，即可预定该车。。。。。。
          li.span3(onclick="$('#userSubmitPriceForm').submit();",style='background-color: #888888; width: 250px; margin-left: 0px; margin-bottom: 0px;cursor:pointer;')
            div(style='height: 200px; margin: 20px;')
              br
              h3(style='color: #ffffff;') 提交我的价格
              br
              p(style='color: #ffffff;') 提交我理想的价格，如果有4s店有合适的活动会主动联系您。。。。。。
          li.span3(onclick="$('#userOffTicketForm').submit();",style='background-color: #4083a9; width: 250px; margin-left: 0px; margin-bottom: 0px;cursor:pointer;')
            div(style='height: 200px; margin: 20px;')
              br
              h3(style='color: #ffffff;') 优惠500元购买
              br
              p(style='color: #ffffff;') 领取优惠券，在谈好价格的基础上出示可以直接抵用现金。
          img(src='img/slectWay.png', alt='slectWay',style="margin-top:10px")
    form(id="userOrderForm",method="GET",action="./userorder")
        input(type="hidden",name="type",value="init")
        input(type="hidden",name="id")
    form(id="userSubmitPriceForm",method="GET",action="./usersubmitprice")
        input(type="hidden",name="type",value="init")
        input(type="hidden",name="id")
    form(id="userOffTicketForm",method="GET",action="./useroffticketConfirm",target="_blank")
        input(type="hidden",name="id")
    script.
      //预定按钮事件
      function orderClick(id){
        $("#userOrderForm input[name='id']").val(id);
        $("#userSubmitPriceForm input[name='id']").val(id);
        $("#userOffTicketForm input[name='id']").val(id);
      }

      //tr下滑效果
      var currentFocusTr = "";
      function focusTr(elment,trId){
        //如果现在已经选择了则关闭
        if(currentFocusTr != ""){
          if(currentFocusTr != trId){
            $("#" + currentFocusTr).hide();
          }
          else{
            $("#" + trId).fadeOut(0);
          }
        }
        //如果选择的不是当前tr才显示focus新的tr
        if(currentFocusTr != trId){
          //$("body").animate({scrollTop: $(elment).offset().top -58},1000);
          $("#" + trId).fadeIn(0);
           currentFocusTr = trId;
        }
        else{
         currentFocusTr = "";
        }
      }
      $('.carousel').carousel();
      $('td input').tooltip();
      $("select[name='carModelLv3Name'],select[name='outsideColorName'],select[name='insideColorName']");

      //tab页切换
      $('#list a').click(function (e) {
        e.preventDefault();
        $(this).tab('show');
      });
      $('#tab#{firstActivedTab}').tab('show');