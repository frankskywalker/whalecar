doctype html
html
  head
    meta(charset='utf-8')
    block css
      link(href='css/bootstrap.min.css', rel='stylesheet', media='screen')
      link(href='css/style.css', rel='stylesheet', media='screen')
      link(rel="icon",type="image/png",href="img/favicon.png")
    block js
      script(src='js/jquery-1.10.2.min.js')
      script(src='js/bootstrap.min.js')
      script(src='js/spin.min.js')
      script(src='js/tools.js')
      script(src='js/jquery.unveil.min.js')
  body(style="background:url('img/subtle_dots.png');")
    div(style="width:1400px;margin:0 auto;")
      div(style="width:1366px;height:1470px;background-image:url('img/vw4.png');")
        form(method="POST",action="./vw4AdverSave",style="padding-left:820px;padding-top:740px;")
          div
            span(style="font-size:20px;padding-bottom:2px;") 姓名
            input(type="text",name="name",style="width:120px;margin-left:50px;font-size:20px;line-height:10px;padding:0px 5px;")
          div
            span(style="font-size:20px;padding-bottom:2px;") 手机号码
            input#tel(type="text",name="tel",style="width:120px;margin-left:10px;font-size:20px;line-height:10px;padding:0px 5px;")
          div
            span(style="font-size:20px;padding-bottom:2px;") 经销商
            select(name="purposeShop",style="width:135px;margin-left:30px;font-size:20px;line-height:10px;padding:0px 5px;")
              option(value=" ") 请选择
              option(value="宁波中基甬耀") 宁波中基甬耀
              option(value="宁波轿辰康发") 宁波轿辰康发
              option(value="宁波明众汽车") 宁波明众汽车
              option(value="慈溪华泰汽车") 慈溪华泰汽车
              option(value="奉化康发汽车") 奉化康发汽车
              option(value="象山华恒汽车") 象山华恒汽车
              option(value="宁波元通宝通") 宁波元通宝通
              option(value="宁波联合汽车") 宁波联合汽车
              option(value="余姚宇顺汽车") 余姚宇顺汽车
              option(value="慈溪锦星汽车") 慈溪锦星汽车
              option(value="宁波轿辰康嘉") 宁波轿辰康嘉
          div
            span(style="font-size:20px;padding-bottom:2px;") 意向车型
            select(name="attentionModel",style="width:135px;margin-left:10px;font-size:20px;line-height:10px;padding:0px 5px;")
              option(value=" ") 请选择
              option(value="速腾") 速腾
              option(value="宝来") 宝来
              option(value="高尔夫") 高尔夫
              option(value="迈腾") 迈腾
              option(value="捷达") 捷达
              option(value="cc") cc
          div
            input.btn.btn-mini(type="submit",value="提交",style="margin-left:190px;margin-top:15px;font-size:15px;",onclick="return submitCheck();")
      script.
       function submitCheck(){
         if(!$('#tel').val().match(/^1\d{10}$/)){
           alert("您输入的手机号码格式有误，请重新输入！");
           return false;
         }
         alert("提交成功!")
         return true;
       }